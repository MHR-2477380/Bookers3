<h2>User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: '100x100' %>

<table class="table">
	<tbody>

		<tr></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>

		<tr>
			<th><%= link_to "follow",following_user_path(@user) %></th>
			<th><%= @user.followings.count %>人</th>
		</tr>

		<tr>
			<th><%= link_to "follower", followers_user_path(@user) %></th>
			<th><%= @user.followers.count %>人</th>
		</tr>

	</tbody>
</table>

<div>
	<% if @user.id == current_user.id %>
		<%= link_to "" ,edit_user_path(current_user), class:'col-xs-12 btn btn-default glyphicon glyphicon-wrench'%>
	<% end %>
</div>

<br>
<br>
<br>

<h2 class="new_book">New book</h2>

<%= form_for(book) do |f| %>

	<div class="field">
		<label for="book_title">Title</label>
		<br>
		<%= f.text_field :title, class:'col-xs-12' %>
	</div>

	<div class="field">
		<label for="book_opinion">Opinion</label>
		<br>
		<%= f.text_area :body, class:'col-xs-12' %>
		<br>
		<br>
		<br>
	</div>

	<div class="actions">
		<%= f.submit 'Create Book', class:'btn btn-primary col-xs-12' %>
	</div>

  <% end %>