<div class="container">

	<div class="row">

		<div class="col-xs-3">
			<!-- 部分テンプレート -->
			<%= render 'users/side', book: @book, user: @user %>
		</div>

		<div class="col-xs-9">

			<p class="text-left"><%= flash[:notice] %></p>

			<h2>Books</h2>

			<table class="table">
				<thead>
					<tr>
						<th>Image</th>
						<th>Title</th>
						<th>Opinion</th>
						<th  colspan="3"></th>
					</tr>
				</thead>
				<tbody>

					<% @books.each do |book| %>

						<tr>
							<td>
								<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40'%>
							</td>

							<td><%= link_to book.title, book_path(book) %></td>

							<td><%= book.body %></td>

							<td  colspan="3"></td>

						</tr>

					<% end %>

				</tbody>
			</table>
		</div>

	</div>

</div>