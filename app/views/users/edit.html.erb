<div class="container">

	<div class="row">

		<div class="col-md-6 col-md-offset-3">

			<h2>User infomation</h2>

			<%= form_for(@user) do |f| %>

				<div class="field">
					<label for="user_name">Name</label>
					<br>
					<%= f.text_field :name, class:'col-xs-12', placeholder:"名前" %>
				</div>

				<div class="field">
					<label for="user_image">Image</label>
					<%= f.attachment_field :profile_image, class:'user_edit_image col-xs-12' %>
				</div>

				<div class="field">
					<label for="user_introduction">Introduction</label>
					<br>
					<%= f.text_area :introduction, class:'col-xs-12', placeholder:"自己紹介文"%>
					<br>
					<br>
				</div>

				<div class="action">
					<br>
					<%= f.submit "Update User", class:'btn btn-primary col-xs-12' %>
				</div>

			<% end %>

		</div>
	</div>

</div>